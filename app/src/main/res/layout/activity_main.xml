<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_check_rates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Currency Rates"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"/>

    <EditText
        android:id="@+id/editTextCurrencyCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Currency Code"
        android:layout_below="@id/button_check_rates"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Currency Rates will be displayed here"
        android:textSize="18sp"
        android:layout_below="@id/editTextCurrencyCode"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <ListView
        android:id="@+id/listViewCurrencyRates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginTop="16dp"/>
</RelativeLayout>
